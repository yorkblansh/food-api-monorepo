model Store {
  id        Int    @id @default(autoincrement())
  storeName String
  address   String
}

model Product {
  id             Int       @id @default(autoincrement())
  count          Int
  productName    String
  price          Int
  type           String?
  expirationDate DateTime?
  deliveryDate   DateTime?
  // Shop           Shop?     @relation(fields: [shopId], references: [id])
  shopId         Int?
}
